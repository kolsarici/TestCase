@model TestCase.UI.Models.Account.LoginModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body class="text-center">
<div class="vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-md-8 col-lg-6">
                <div class="border border-3 border-primary"></div>
                <div class="card bg-white shadow-lg">
                    <div class="card-body p-5">
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "mb-3 mt-md-4", role = "form"}))
                        {
                            <img src="~/img/apis.png" style="height:200px;width:400px;"/>
                            <p class=" mb-5"></p>
                            <div class="mb-3">
                                <label for="email" class="form-label ">Email address</label>
                                @Html.TextBoxFor(m => m.Username, new {@class = "form-control"})
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label ">Password</label>
                                @Html.TextBoxFor(m => m.Password, new {type = "password", @class = "form-control"})
                            </div>
                            <p class="small">
                                <a class="text-primary" href="/">Forgot password?</a>
                            </p>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-outline-dark">Login</button>
                            </div>
                        }
                        <div>
                            <p class="mb-0  text-center">
                                Don't have an account?
                                <a href="/"
                                   class="text-primary fw-bold">
                                    Sign
                                    Up
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>